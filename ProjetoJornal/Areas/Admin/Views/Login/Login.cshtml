    <script src="~/Areas/Admin/Assets/admin/layout/scripts/demo.js" type="text/javascript"></script>
    <script src="~/Areas/Admin/Assets/admin/pages/scripts/login.js" type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script type="text/javascript">
        $(document).ready(function () {
            Metronic.init(); // init metronic core components
            Layout.init(); // init current layout
            Login.init();
            Demo.init();

            $("#btnEntrar").click(function () {
                var error = [];
                if ($("#user").val() == "") {
                    error.push("Usuário é obrigatório!");
                }
                else if ($("#password").val() == "") {
                    error.push("Senha é obrigatório!");
                }

                var viewModel = {
                    User: $("#user").val(),
                    Password: $("#password").val()
                };

                if (error.length == 0) {
                    $.ajax({
                        url: "/Login/Autenticar/",
                        type: "POST",
                        dataType: "json",
                        contentType: "application/json",
                        data: JSON.stringify(viewModel),
                        async: false,
                        success: function (result) {
                            if (result.Success) {
                                console.log(result);
                                if (result.Data == "S")
                                    window.location.href = "../Noticias/Index";
                                else {
                                    $("#diverror").show();
                                    $("#mensagem").html("Usuário não encontrado, tente novamente!");
                                }
                            }
                        }
                    });
                } else {
                    var index;
                    for (index = 0; index < error.length; ++index) {
                        $("#diverror").show();
                        $("#mensagem").html(error[index]);
                    }
                }
            });
        });
    </script>
    <!-- END JAVASCRIPTS -->
