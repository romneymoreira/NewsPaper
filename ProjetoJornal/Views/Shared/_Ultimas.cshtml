@model ProjetoJornal.ViewModel.IndexModel
<div class="title-section">
    <h1>Latest News <i class="lnr lnr-bookmark"></i></h1>
</div>
<div class="row">
@foreach (var item in Model.Ultimas)
{
    <div class="col-sm-6">
        <div class="news-post standart-post">
            <div class="post-image">
                <a href="single-post">
                    @if (item.FotoByte != null)
                    {
                        var base64 = Convert.ToBase64String(item.FotoByte);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        <img src="@imgSrc" alt="" />
                    }
                    else
                    {
                        <img alt="" src="@item.Foto" />
                    }
                </a>
                <a href="#" class="category category-tech">Tech</a>
            </div>
            <h2><a href="single-post.html">@item.Titulo</a></h2>
            <ul class="post-tags">
                <li><i class="lnr lnr-user"></i>by <a href="#">@item.Autor</a></li>
                <li><a href="#"><i class="lnr lnr-book"></i><span>23 comments</span></a></li>
                <li><i class="lnr lnr-eye"></i>872 Views</li>
            </ul>
            <p>
                @if (item.Corpo.Length > 200)
                {
                    @item.Corpo.Substring(0, 200) 
                }
                else
                {
                    @item.Corpo
                }
              
            </p>
        </div>
    </div>
}
</div>
