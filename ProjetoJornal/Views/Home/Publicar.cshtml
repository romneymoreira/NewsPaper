@section Scripts {
<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
<link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet">
    <script type="text/javascript">
        jQuery(document).ready(function () {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "positionClass": "toast-top-full-width",
                "onclick": null,
                "showDuration": "1000",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            if ("@Model.Status" != "A")
                $("#clique").css("display", 'none');
        });

        function publicar() {
            $.ajax({
                url: "@Url.Action("AutorizarPublicacao", "Home")",
                data: { id: @Model.Id },
                success: function (data) {
                    console.log(data);
                    if (data == "S") {
                        $("#clique").css("display", 'none');
                        toastr.success("Noticía publicada com sucesso", "Sucesso");
                    }
                }
            });
        }
    </script>
}

