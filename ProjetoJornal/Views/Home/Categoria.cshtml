@using PagedList.Mvc
@model  PagedList.IPagedList<ProjetoJornal.ViewModel.CategoriaSiteModel>
<!-- content-section
    ================================================== -->
<style>
    ul.pagination {
        margin-bottom: 40px;
    }

        ul.pagination li {
            display: inline-block;
        }

            ul.pagination li a {
                padding: 6px 14px;
                color: #565656;
                font-size: 12px;
                font-family: "Open Sans", sans-serif;
                border: 1px solid #f1f1f1;
            }

                ul.pagination li a.active {
                    border: 1px solid #a1a1a1;
                }

                ul.pagination li a:hover {
                    background: #00A7B3;
                    border: 1px solid transparent;
                    color: #fff;
                }
</style>
<section id="content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <!-- Posts-block -->
                <div class="posts-block standard-box">
                    <div class="title-section">
                        <h1>@ViewBag.Categoria</h1>
                    </div>
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-4 col-md-6">
                                <div class="news-post standart-post">
                                    <div class="post-image">
                                        <a href="@Url.Action("Post", "Home")?id=@item.Id">
                                            
                                                <img alt="" src="@item.FotoHome" />
                                        </a>
                                        <a href="#" class="@item.ClasseCategoria">
                                            @item.Categoria
                                        </a>
                                    </div>
                                    <h2><a href="@Url.Action("Post", "Home")?id=@item.Id">@item.Titulo</a></h2>
                                    <ul class="post-tags">
                                        <li><i class="lnr lnr-user"></i>Por <a href="#">@item.Autor</a></li>
                                        <li><i class="lnr lnr-eye"></i>@item.Visualizacoes Visualizações</li>
                                        <li><i class="fa fa-calendar"></i>@item.DataPublicacao</li>
                                    </ul>
                                    <p>
                                        @item.CorpoSubString
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                    @if (ViewBag.ItensEncontrados > 0)
                    {
                        <div class="pagination" style="margin-left: 400px">
                            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
                        </div>
                    }
                    <br />
                    @if (Model.HasNextPage || Model.HasPreviousPage)
                    {
                        <div style="text-align: center">
                            @Html.PagedListPager(Model, (page) => Url.Action("Categoria", new { page = page, categoria = @ViewBag.IdCategoria }), PagedListRenderOptions.Classic)
                        </div>
                    }
                    @if (Model.Count == 0)
                    {
                        <div style="text-align: center">
                            Não existem notcías cadastradas para a categoria solicitada.
                        </div>
                    }
                </div>
                <!-- End Posts-block -->
            </div>

        </div>
        <!-- Advertisement -->
        <div class="advertisement">
            <a href="#"><img src="upload/addsense/620x80grey.jpg" alt=""></a>
        </div>
        <!-- End Advertisement -->
    </div>
</section>
<!-- End content section -->
